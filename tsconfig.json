{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "jsx": "preserve",
        "noEmit": true,
        "sourceMap": true,
        "strict": true,
        "removeComments": false,
        "skipLibCheck": true,
        "allowJs": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "noImplicitThis": false,
        "strictNullChecks": true,
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.js",
        "src/**/*.jsx",
        "global.d.ts",
    ],
    "exclude": [
        "node_modules",
        "bkp.ts",
    ],
    "typeRoots": [
        "node_modules/@types",
        "node_modules/@h5p-types"
    ],
}